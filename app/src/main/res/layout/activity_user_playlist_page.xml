<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Playlist_Page">

    <TextView
        android:id="@+id/my_playlist_Title_textView"
        android:layout_width="199dp"
        android:layout_height="66dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/my_playlist"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Artist1"
        android:layout_width="272dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_playlist_Title_textView"
        app:layout_constraintVertical_bias="0.122" />

    <TextView
        android:id="@+id/Artist2"
        android:layout_width="272dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_playlist_Title_textView"
        app:layout_constraintVertical_bias="0.255" />

    <TextView
        android:id="@+id/Artist3"
        android:layout_width="272dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_playlist_Title_textView"
        app:layout_constraintVertical_bias="0.388" />

    <TextView
        android:id="@+id/Artist4"
        android:layout_width="272dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_playlist_Title_textView"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/Artist5"
        android:layout_width="272dp"
        android:layout_height="80dp"

        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_playlist_Title_textView"
        app:layout_constraintVertical_bias="0.653" />

    <Button
        android:id="@+id/clear_playlist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_playlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

</androidx.constraintlayout.widget.ConstraintLayout>